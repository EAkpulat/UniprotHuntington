#frequency of disease occurence
df_description1 = df2.description
df_counts_description = df_description1.value_counts()
df_counts_description = df_counts_description.sort_values(ascending=False)
df_counts_description

#Frequency of molecular activity
df_moltype = df3.moltype
df_counts_moltype = df_moltype.value_counts()
df_counts_moltype = df_counts_moltype.sort_values(ascending=False)
df_counts_moltype

